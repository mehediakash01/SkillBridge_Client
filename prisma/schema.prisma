generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum Role{
  STUDENT
  TUTOR
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Role @default(STUDENT)
  isBanned Boolean @default(false)

}