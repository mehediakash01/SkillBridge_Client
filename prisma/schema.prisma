generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum Booked_Status {
  pending
  confirmed
  completed
  cancelled
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(STUDENT)
  isBanned Boolean @default(false)

  tutorProfile TutorProfile?
  bookings     Booking[]
}

model TutorProfile {
  id          Int       @id @default(autoincrement())
  bio         String
  hourlyRate  Decimal
  averageRate Decimal   @default(0.00)
  experience  Int
  studentId   Int       @unique
  Student     User      @relation(fields: [studentId], references: [id])
  bookings    Booking[]
}

model Booking {
  id         Int           @id @default(autoincrement())
  studentId  Int
  tutorId    Int
  totalPrice Decimal
  startTime  DateTime
  endTime    DateTime
  status     Booked_Status @default(pending)
  Student    User          @relation(fields: [studentId], references: [id])
  Tutor      TutorProfile  @relation(fields: [tutorId], references: [id])
}
