generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TutorProfile {
  id             String          @id @default(uuid())
  bio            String
  hourlyRate     Decimal
  averageRate    Decimal         @default(0.00)
  experience     Int
  studentId      String          @unique
  createdAt      DateTime        @default(now()) @db.Timestamp(6)
  updatedAt      DateTime        @default(now()) @updatedAt @db.Timestamp(6)
  availabilities Availability[]
  bookings       Booking[]
  Student        User            @relation(fields: [studentId], references: [id])
  tutorSubjects  TutorSubjects[]

  @@index([hourlyRate])
  @@index([averageRate])
}

model Booking {
  id         String        @id @default(uuid())
  studentId  String
  tutorId    String
  totalPrice Decimal
  startTime  DateTime
  endTime    DateTime
  status     Booked_Status @default(pending)
  Student    User          @relation(fields: [studentId], references: [id])
  Tutor      TutorProfile  @relation(fields: [tutorId], references: [id])
  reviews    Reviews[]

  @@index([totalPrice])
}

model Availability {
  id        String       @id @default(uuid())
  tutorId   String
  dayOfWeek Week
  startTime DateTime
  endTime   DateTime
  Tutor     TutorProfile @relation(fields: [tutorId], references: [id])

  @@index([dayOfWeek, startTime, endTime])
}

model Category {
  id            Int             @id @default(autoincrement())
  categoryName  String
  tutorSubjects TutorSubjects[]
}

model TutorSubjects {
  tutorId    String
  categoryId Int
  category   Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  Tutor      TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)

  @@id([tutorId, categoryId])
}

model Reviews {
  id        String  @id @default(uuid())
  comment   String
  bookingId String
  rating    Decimal @default(0.00)
  booking   Booking @relation(fields: [bookingId], references: [id])

  @@index([rating])
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime
  User                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String        @id
  name          String
  email         String        @unique
  password      String?
  role          Role?         @default(STUDENT)
  isBanned      Boolean?      @default(false)
  emailVerified Boolean       @default(false)
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime
  Account       Account[]
  bookings      Booking[]
  Session       Session[]
  tutorProfile  TutorProfile?

  @@index([name])
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([identifier])
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum Booked_Status {
  pending
  confirmed
  completed
  cancelled
}

enum Week {
  sat
  sun
  mon
  tue
  wed
  thu
  fri
}
